package application;

import java.util.Arrays;
import java.util.List;
import java.util.Scanner;
import java.util.stream.Collectors;
import java.util.stream.Stream;

public class Program {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Quantos valores que serão convertidos");
		int ma = sc.nextInt();
		
		List<Integer> list = Arrays.asList(42,32,10);
		

			
		Stream<Object> st1 = list.stream().map(x -> x * 0.3048);
		
		System.out.println("Valores em metros");
		System.out.println(Arrays.toString(list.toArray()));
		System.out.println("Valore s em pés");
		System.out.println(Arrays.toString(st1.toArray()));
		
	
		int sum = list.stream().reduce(0, (x, y) -> x + y);
		System.out.println("Sum = " + sum);
		List<Integer> newList = list.stream()
		.filter(x -> x % 2 == 0)
		.map(x -> x * 10)
		.collect(Collectors.toList());
		System.out.println(Arrays.toString(newList.toArray()));

	}

}
